page {
  background: white;
}

.container {
  display: flex;
  flex-direction: column;
}

.header {
  height: 384rpx;
  display: flex;
  flex-direction: column;
  background-color: #ebebeb;
  position: relative;
}

/*背景图片*/
.header .background {
  width: 100%;
  height: 100%;
}

.header scroll-view{
  position: absolute;
  left: 0;
  bottom: 0;
}

.header .state {
  display: flex;
  flex-direction: row;
  margin: 8rpx;
}

.header .state .icon{
  width: 144rpx;
  height: 144rpx;
  margin: 8rpx;
}


.category{
  margin-bottom: 40rpx;
}


.case-list {
  background-color: white;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}

.case-list .title {
  font-style: #242424;
  font-size: 30rpx;
  margin: 12rpx 32rpx;
  font-weight: 400;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.case-list .title .rank{
  font-size: 20rpx;
  color: #6d6d6d;
  border: 1rpx #6d6d6d solid;
  border-radius: 20rpx;
  margin: 0rpx 32rpx;
  padding: 4rpx 12rpx;
}

.case-list .body {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 28rpx;
  margin: 0 29rpx;
}

.case-list .body_left {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  font-size: 28rpx;
}

.case-list .body_right {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  font-size: 28rpx;
}

.case-list .body .item{
  width: 310rpx;
  height: max-content;
  box-shadow: 0rpx 0rpx 8rpx #e0e0e0;
  margin: 0 0rpx 0 0;
  font-size: 26rpx;
  margin: 20rpx 18rpx;
  border-radius: 10rpx;
  position: relative;
}

.case-list .body .item .section_up{
  position: relative;
}

.case-list .body .img{
  width: 100%;
  height: 284rpx;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
}

.case-list .body .flag{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.case-list .body .hot{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 12rpx;
  bottom: 16rpx;
}

.case-list .body .container_progress{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  font-size: 20rpx;
  color: #ffbc00;
  top: 50%;
  left: 0;
  z-index: 99;
}

.case-list .body .container_progress .container_progress_sub{
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  /* margin-bottom: 12rpx; */
  align-items: center;
}


progress {
  width: 168rpx;
  margin-right: 12rpx;
}

.case-list .body .section_down{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: flex-end;
  margin: 10rpx 0;
}

.case-list .body .section_down .goods{
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.case-list .body .section_down text{
  width: 100%;
  color: #484848;
  white-space: nowrap;
  margin: 4rpx;
}

.case-list .body .section_down .price{
  color: #ff595c;
  font-size: 24rpx;
  text-align: center;
  margin-left: 5%;
  border: 1rpx #ff595c solid;
  margin: 2rpx 20rpx;
  border-radius: 24rpx;
}

