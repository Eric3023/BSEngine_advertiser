	<view class="case-list">
		<view class="header">
			<text>活动列表</text>
		</view>
		<scroll-view scroll-x="false" scroll-y="true">
			<view class="body">
				<view class="item" wx:for="1...10" wx:key="index">
					<image src="/img/banner/banner1.jpg">
					</image>
					<view>
						<text class="category">饰品带货</text>
						<text class="num">参与主播3.5万+</text>
					</view>
				</view>
			</view>
		</scroll-view>
	</view>

