<view class="container">
	<!-- 订单简介 -->
	<view class="header">
		<!-- 背景图片 -->
		<image class="background" src="/img/background/activity.jpg" />
		<scroll-view scroll-x="false" scroll-y="false">
			<view class="state">
				<view wx:for="{{8}}" wx:key="index">
					<image class="icon" src="/img/activity/icon_wait_receive.png" data-index="{{index}}" catchtap="onChangeType"></image>
				</view>
			</view>
		</scroll-view>
	</view>
	<!-- 活动列表 -->
	<view class="case-list">
		<view class="title">
			<text>活动列表</text>
			<text class="rank">火热排行榜</text>
		</view>
		<view class="body">
			<view class="body_left">
				<view class="item" wx:for="{{21}}" wx:key="index" wx:if="{{index%2==0}}">
					<view class="section_up">
						<image class="img" wx:if="{{index%4==0}}" src="/img/login/login.jpg" mode="widthFix" />
						<image class="img" wx:if="{{index%4==2}}" src="/img/adcode/bully.jpg" mode="widthFix" />
						<image class="flag" src="{{index==0? '/img/icon/icon_first.png':'/img/icon/icon_chance.png'}}" />
						<image class="hot" wx:if="{{index==0}}" src="/img/icon/icon_hot.png" />
						<view class="container_progress">
							<view class="container_progress_sub">
								<progress class="progress" activeColor="#ffbc00" backgroundColor="#787b89" percent="60" border-radius="5" stroke-width="10rpx">
								</progress>
								<text>剩198单</text>
							</view>
							<view>2020年7月1日-2020年7月4日</view>
						</view>
					</view>
					<view class="section_down">
						<view class="goods">
							<text class="ell">精美手工皂宣传精美手工皂宣传</text>
							<text class="ell">口播{{index}}次</text>
						</view>
						<text class="price">200元</text>
					</view>
				</view>
			</view>
			<view class="body_right">
				<view class="item" wx:for="{{21}}" wx:key="index" wx:if="{{index%2==1}}">
					<view class="section_up">
						<image class="img" wx:if="{{index%4==3}}" src="/img/login/login.jpg" mode="widthFix" />
						<image class="img" wx:if="{{index%4==1}}" src="/img/adcode/bully.jpg" mode="widthFix" />
						<image class="flag" src="{{index==0? '/img/icon/icon_first.png':'/img/icon/icon_chance.png'}}" />
						<image class="hot" wx:if="{{index==0}}" src="/img/icon/icon_hot.png" />
						<view class="container_progress">
							<view class="container_progress_sub">
								<progress class="progress" activeColor="#ffbc00" backgroundColor="#787b89" percent="60" border-radius="5" stroke-width="10rpx">
								</progress>
								<text>剩198单</text>
							</view>
							<view>2020年7月1日-2020年7月4日</view>
						</view>
					</view>
					<view class="section_down">
						<view class="goods">
							<text class="ell">精美手工皂宣传精美手工皂宣传</text>
							<text class="ell">口播{{index}}次</text>
						</view>
						<text class="price">200元</text>
					</view>
				</view>
			</view>
		</view>
	</view>
	<!-- <view class="empty" wx:if="{{!(orders&&orders.length!=0)&&!lock}}">
		<text>没有符合条件的订单列表~~~</text>
	</view> -->
</view>