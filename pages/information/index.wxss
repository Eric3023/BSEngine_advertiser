page {
  background-color: #ffffff;
}

.container {
  margin: 20rpx 0;
}

.item {
  width: 700rpx;
  margin: 24rpx 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item .time {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  border-radius: 16rpx;
  padding: 6rpx 12rpx;
  color: #aaaaaa;
  background-color: #ececec;
}

.item .body {
  width: 700rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}


.item .icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.item .content {
  width: 518rpx;
  margin-left: 22rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 10rpx #d0d0d0;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.item .content .desc {
  font-size: 28rpx;
  margin: 20rpx 16rpx;
}

.item .content .num {
  width: fit-content;
  font-size: 28rpx;
  margin:0 20rpx 28rpx 28rpx;
  color: #82c6c2;
  font-weight: 600;
}

.item .content .line {
  width: 478rpx;
  height: 1rpx;
  margin: 20rpx 20rpx;
  background-color: #dedede;
}