page {
  background: white;
}

.header {
  display: flex;
  flex-direction: column;
  position: relative;
  align-items: center;
}

/*背景图片*/
.header .background {
  width: 100%;
  height: 120rpx;
  position: absolute;
  top: 0%;
  left: 0%;
  z-index: -9;
}

.ad_state {
  width: 692rpx;
  height: 158rpx;
  margin-top: 56rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  box-shadow: 0 0 12rpx #f7e1cc;
  box-sizing: border-box;
  position: relative;
  border-radius: 10rpx;
}

.ad_state_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}


.ad_state_item :first-child {
  font-weight: 600;
  color: black;
}

.ad_state_item :last-child {
  margin-top: 10rpx;
  color: #636363;
}

.flag {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  background-color: white;
  color: #e36c00;
  font-size: 20rpx;
  position: absolute;
  top: -40rpx;
  left: 16rpx;
}

.flag text {
  margin-bottom: 18rpx;
}

.title_container {
  width: 692rpx;
  height: 50rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.child1 {
  font-size: 36rpx;
  color: black;
  font-weight: 500;
}

.child2 {
  font-size: 24rpx;
  color: white;
  background-color: #fc9708;
  padding: 8rpx 12rpx;
  border-radius: 10rpx;
}

.header scroll-view {
  margin-top: 36rpx;
}

.header .state {
  display: flex;
  flex-direction: row;
  margin: 8rpx;
}

.header .state .icon {
  width: 144rpx;
  height: 144rpx;
  margin: 8rpx;
}

.category {
  margin-bottom: 40rpx;
}

.list {
  width: 700rpx;
  margin: 20rpx 25rpx 30rpx 25rpx;
  display: flex;
  flex-direction: column;
}

.item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 18rpx 0;
}

.item .icon {
  width: 66rpx;
  height: 66rpx;
  border-radius: 10rpx;
}

.item .content {
  width: 494rpx;
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  font-size: 30rpx;
}

.item .content .time{
  color: #7a7a7a;
}

.item .content .success{
  margin-left: 60rpx;
}

.item .content .margin{
  margin-top: 12rpx;
}

.item .content .money{
  color: #ff7b00;
}

.item .state{
  width: 108rpx;
  height: 108rpx;
  color: white;
  border-radius: 50%;
}

.wait_test {
  background: linear-gradient(to right, #778dff, #0b53eb);
  font-size: 28rpx;
}

.wait_pay {
  background: linear-gradient(to right, #ff77f4, #ff53cf);
  font-size: 28rpx;
}

.payed {
  background: linear-gradient(to right, #fd96cb, #ff23af);
  font-size: 28rpx;
}

.throwing {
  background: linear-gradient(to right, #ebc071, #fea602);
  font-size: 28rpx;
}

.completed {
  background: linear-gradient(to right, #c7fd0b, #7cdc01);
  font-size: 28rpx;
}

.fail {
  background: linear-gradient(to right, #c23fff, #b905dc);
  font-size: 24rpx;
}
