.container {
  display: flex;
  flex-direction: column;
}

.body {
  height: fit-content;
  display: flex;
  flex-direction: column;
  margin: 120rpx 0rpx;
}

.param {
  width: 720rpx;
  height: 118rpx;
  margin: 15rpx;
  color: white;
  background: white;
  font-size: 38rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 12rpx;
  position: relative;
}

.sub_container {
  display: flex;
  flex-direction: row;
  color: #969696;
  font-size: 26rpx;
  position: absolute;
  top: 40rpx;
  right: 0;
}

.title {
  margin-left: 56rpx;
}

.icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 4rpx;
}

.background {
  width: 600rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 12rpx;
}

.plateform {
  background: linear-gradient(to right, #27b896, #ffffff);
}

.category {
  background: linear-gradient(to right, #89b827, #ffffff);
}

.follower {
  background: linear-gradient(to right, #a326b9, #ffffff);
}

.price {
  background: linear-gradient(to right, #b57626, #ffffff);
}

.audience {
  background: linear-gradient(to right, #26b6b3, #ffffff);
}

.btn {
  height: 90rpx;
  width: 680rpx;
  background-color: #f88a3e;
  color: white;
  font-size: 32rpx;
  border-radius: 20rpx;
  display: flex;
  margin-top: 80rpx;
}