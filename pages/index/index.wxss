page {
    width: 100%;
    height: 100%;
    background-color: #ffffff;
}

scroll-view {
    padding-top: 110rpx;
    box-sizing: border-box;
}

.container {
    position: relative;
}

.search_background {
    width: 100%;
    height: 90rpx;
    background-color: #ffffff;
    box-shadow: 0 0 10rpx #ced3d4;
    margin-bottom: 20rpx;
    position: fixed;
    z-index: 9;
}


.search {
    width: 650rpx;
    height: 54rpx;
    box-sizing: border-box;
    border: 1px solid #e6e3e349;
    border-radius: 25rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: #f4f4f4;
}

.search>image {
    margin-left: 24rpx;
    width: 32rpx;
    height: 32rpx;
}

.search>text {
    float: left;
    margin-top: 0rpx;
    margin-left: 12rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular, sans-serif;
    color: rgb(226, 224, 224);
}

.header {
    width: 100%;
    position: relative;
}

.header .carousel_swiper {
    width: 100%;
    height: 325rpx;
    display: block;
    position: relative;
    background: #f4f4f4;
    margin-bottom: 20rpx;
    box-shadow: 0 0 10rpx #ced3d4;
}

.header .carouselImg {
    width: 100%;
    height: inherit;
}

.case-list {
    background-color: white;
    width: 100%;
    border-radius: 5rpx;
    box-sizing: border-box;
}

.case-list .body {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    font-size: 28rpx;
    margin: 0 29rpx;
}

.case-list .body_left {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    font-size: 28rpx;
}

.case-list .body_right {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    font-size: 28rpx;
}