.container {
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #fafafa;
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
  left: 0;
  font-size: 28rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 9;
}

.header text {
  position: absolute;
  right: 38rpx;
  font-weight: 500;
  background-color: #ffc77d;
  color: white;
  border-radius: 10rpx;
  padding: 8rpx 20rpx;
}

.list {
  width: 700rpx;
  margin: 25rpx 25rpx 0 25rpx;
  display: flex;
  flex-direction: column;
}

.item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 18rpx 0;
}

.item .icon {
  width: 66rpx;
  height: 66rpx;
  border-radius: 10rpx;
}

.item .content {
  width: 494rpx;
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  font-size: 30rpx;
}

.item .content .time {
  color: #7a7a7a;
}

.item .content .success {
  margin-left: 60rpx;
}

.item .content .margin {
  margin-top: 12rpx;
}

.item .content .money {
  color: #ff7b00;
}

.item .state {
  width: 108rpx;
  height: 108rpx;
  color: white;
  border-radius: 50%;
}

.wait_test {
  background: linear-gradient(to right, #778dff, #0b53eb);
  font-size: 28rpx;
}

.wait_pay {
  background: linear-gradient(to right, #ff77f4, #ff53cf);
  font-size: 28rpx;
}

.payed {
  background: linear-gradient(to right, #fd96cb, #ff23af);
  font-size: 28rpx;
}

.throwing {
  background: linear-gradient(to right, #ebc071, #fea602);
  font-size: 28rpx;
}

.completed {
  background: linear-gradient(to right, #c7fd0b, #7cdc01);
  font-size: 28rpx;
}

.fail {
  background: linear-gradient(to right, #c23fff, #b905dc);
  font-size: 24rpx;
}

.paused{
  background: linear-gradient(to right, #ababab, #909090);
  font-size: 28rpx;
}