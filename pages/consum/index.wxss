.container{
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #fafafa;
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
  left: 0;
  font-size: 28rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 9;
}
.header text {
  position: absolute;
  right: 38rpx;
  font-weight: 500;
  background-color: #ffc77d;
  color: white;
  border-radius: 10rpx;
  padding: 8rpx 20rpx;
}

.list {
  width: 700rpx;
  margin: 25rpx 25rpx 0 25rpx;
  display: flex;
  flex-direction: column;
}

.item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 32rpx 0;
}

.item .icon {
  width: 66rpx;
  height: 66rpx;
}

.item .content {
  width: 494rpx;
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  font-size: 30rpx;
}

.item .content .time{
  color: #7a7a7a;
  margin-left: 16rpx;
}

.item .content .success{
  margin-left: 60rpx;
}

.item .content .margin{
  margin-top: 12rpx;
}

.item .content .money{
  color: #ff7b00;
}

.item .state {
  width: 100rpx;
  height: 100rpx;
  font-size: 28rpx;
  color: white;
  background-color: #fea602;
  border-radius: 50%;
}
