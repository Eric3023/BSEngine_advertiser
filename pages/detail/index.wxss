.column {
  display: flex;
  flex-direction: column;
}

.header {
  height: fit-content;
  display: flex;
  flex-direction: column;
  margin: 0rpx 22rpx;
  position: relative;
}

.header .flag_container{
  width: 100rpx;
  height: 100rpx;
  background-color: #ea7332;
  border-radius: 50%;
  position: absolute;
  top: 0;
}

.header .flag{
  color: white;
  font-size: 24rpx;
  position: relative;
  bottom: 16rpx;
}

.header .name {
  width: 100%;
  background-color: #ea7332;
  color: white;
  font-size: 32rpx;
  font-weight: 600rpx;
  padding: 10rpx 0;
  margin-top: 54rpx;
  margin-bottom: 20rpx;
}

.header .param {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0 10rpx 28rpx;
}

.icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 10rpx;
}

.totalPrice{
  color: #ea7332;
}

.body {
  height: fit-content;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 22rpx 40rpx 22rpx;
}

.title {
  font-size: 32rpx;
  color: #b96ffd;
  margin: 18rpx 0;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title .point {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #b96ffd;
  margin: 0 20rpx;
}