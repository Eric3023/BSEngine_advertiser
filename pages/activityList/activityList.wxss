page {
  background-color: #f6f6f6;
}

.container {
  width: 100%;
  height: 100%;
}

.header {
  margin-left: 20rpx;
  margin-top: 50rpx;
  font-size: 36rpx;
  color: black;
}

.list {
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.item {
  margin-top: 30rpx;
  height: 175rpx;
  background-color: white;
}

.content {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.item .button {
  width: 118rpx;
  height: 48rpx;
  color: white;
  background-color: #ffbb00;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
}

.item .content_container {
  width: 516rpx;
}

.item .sub_container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 12rpx 0rpx;
}

.item .sub_container .icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.item .sub_container .tilte_container {
  margin-left: 18rpx;
  width: 416rpx;
  height: 70rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 28rpx;
  color: black;
}

.time {
  font-size: 24rpx;
  color: #a8a8a8;
  margin-top: 4rpx;
  line-height: 28rpx;
}

.sell_container {
  width: 208rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
}

.order_container {
  width: 188rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.follow_container {
  width: 118rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.name {
  font-size: 20rpx;
  color: #787878;
  line-height: 28rpx;
}

.count {
  font-size: 22rpx;
  color: #303030;
  line-height:28rpx;
}

.line {
  font-size: 24rpx;
  color: #fea9a6;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden
 }
 .content {
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
 }
 .del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
 }
 .touch-move-active .content,
 .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
 }