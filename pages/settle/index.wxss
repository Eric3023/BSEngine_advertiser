page{
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  margin: 70rpx 0 28rpx 0;
  font-size: 42rpx;
  color: black;
  font-weight: 600;
}

.param{
  width: 700rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 42rpx;
  font-size: 28rpx;
}

.param .info{
  color: #ff802c;
  border: 1rpx solid #ff802c;
  border-radius: 28rpx;
  padding: 8rpx 18rpx;
}

.param .coupon{
  color: #5bb69f;
}

.param .settle{
  color: #ff822f;
  font-weight: 600;
} 

.btn{
  width: 100%;
  height: 72rpx;
  margin-top: 118rpx;
  background-color: #fc812c;
  color: white;
  font-size: 32rpx;
  line-height: 32rpx;
}