page {
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.txt {
  display: flex;
  flex-direction: column;
  margin: 28rpx 50rpx;
  padding: 0 20rpx 120rpx 20rpx;
  border: 2rpx #ffbb00 solid;
  font-size: 28rpx;
}

.icon {
  margin-top: 28rpx;
  width: 160rpx;
  height: 160rpx;
}

.box {
  border: 1rpx #ffbb00 dashed;
  padding: 6rpx 10rpx;
}

.title {
  margin-top: 32rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.desc {
  margin-top: 72rpx;
  color: #000000;
  display: flex;
  flex-direction: column;
}

.desc .desc_box {
  margin-top: 18rpx;
  min-height: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.time {
  margin-top: 50rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.end,
.category {
  margin-top: 72rpx;
  color: #000000;
  display: flex;
  flex-direction: row;
  align-items: center;
}