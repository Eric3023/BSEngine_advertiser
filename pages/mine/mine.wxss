page{
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
}

.header_container {
  position: relative;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin-top: 12rpx;
  align-items: center;
}

.header_container .header {
  width: 100%;
  height: 72rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.header_container .header .icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.header_container .content {
  width: 568rpx;
  height: 394rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 98rpx;
  box-shadow: 0rpx 0rpx 10rpx 4rpx #ebebeb;
  box-sizing: border-box;
  border-radius: 12rpx;
  position: relative;
}

.user_info {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  top: -98rpx;
}

.user_info .header_user_container {
  margin-left: 30rpx;
}

.authentication {
  width: 128rpx;
  height: 51rpx;
  background-color: #ffbb00;
  color: #ab6c29;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0rpx;
  bottom: 18rpx;
  border-bottom-left-radius: 40rpx;
  border-top-left-radius: 40rpx;
}

.header_user_balance {
  width: 100%;
  margin-top: 240rpx;
  z-index: 9;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 50rpx;
}

.header_user_balance .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #242424;
  font-size: 28rpx;
  margin: 0 20rpx;
}

.fans {
  font-weight: 500;
  margin-bottom: 2rpx;
}

.money_container {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.money {
  color: #fb0203;
  font-weight: 500;
  margin-bottom: 2rpx;
}

.rmb {
  font-size: 24rpx;
  margin-bottom: 2rpx;
}

.body_container {
  background-color: white;
  margin-top: 42rpx;
  display: flex;
  flex-direction: row;
  /* box-shadow: 0rpx 0rpx 10rpx 4rpx #ebebeb; */
  justify-content: space-around;
}