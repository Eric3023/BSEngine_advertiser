<scroll-view class="scroll" scroll-x="false" scroll-y="true">
	<view class="container">
		<view class="header">
			<text class="{{type==0? 'active':'disactive'}} video" data-type="{{0}}" catchtap="onChangeType">视频/直播</text>
			<text class="{{type==1? 'active':'disactive'}} other" data-type="{{1}}" catchtap="onChangeType">其他</text>
		</view>
		<view class="body">
			<block wx:for="{{10}}" wx:key="index">
				<view class="item" catchtap="onClickItem">
					<image class="photo" src="/img/plateform/bilibili.png" mode="aspectFill"/>
					<view class="info">
						<view class="title">
							<image class="flag" src="/img/plateform/douyin.png"></image>
							<view>李荣浩</view>
						</view>
						<view>ID：2020081465</view>
					</view>
					<view class="state">
						<image class="stateIcon center" src="/img/icon/icon_media.png"></image>
						<text>审核中</text>
					</view>
				</view>
			</block>
		</view>
		<image class="add" src="/img/icon/icon_add.jpg" catchtap="addAccount"/>
	</view>
</scroll-view>