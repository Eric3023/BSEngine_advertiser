page{
  width: 100%;
  height: 100%;
  background-color: #fafafa;
}

.scroll{
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .header {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 36rpx 0;
  background-color: white;
  border: 2rpx solid #ffbb00;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.container .header .active {
  background-color: #ffbb00;
  color: white;
  border-radius: 30rpx;
}

.container .header .disactive {
  color: #ffbb00;
  background-color: white;
  border-radius: 30rpx;
}

.container .header .video {
  padding: 4rpx 12rpx;
}

.container .header .other {
  padding: 4rpx 42rpx;
}

.item {
  width: 720rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  font-size: 36rpx;
}

.item .photo {
  width: 110rpx;
  height: 110rpx;
  border-radius: 5rpx;
}

.item .info {
  margin-left: 24rpx;
  width: 450rpx;
  font-size: 32rpx;
  color: black;
}

.item .info .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
}

.item .info .title .flag {
  width: 36rpx;
  height: 36rpx;
  border-radius: 10rpx;
  margin-right: 16rpx;
}

.item .state {
  font-size: 28rpx;
  color: #b96ffd;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item .state .stateIcon {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  background-color: #b96ffd;
  color: white;
  font-weight: 500;
  margin-right: 10rpx;
}

.add {
  width: 96rpx;
  height: 96rpx;
  position: fixed;
  right: 20rpx;
  bottom: 124rpx;
  border-radius: 50%;
}

.center {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}