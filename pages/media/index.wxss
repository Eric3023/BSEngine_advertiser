.container {
  display: flex;
  flex-direction: column;
}

.body {
  display: flex;
  flex-direction: column;
  margin: 120rpx 45rpx;
}

.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item {
  width: 320rpx;
  height: 138rpx;
  margin: 7rpx 5rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  background: linear-gradient(to bottom right, #646464, #bdbdbd);
  position: relative;
}

.background {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}

.name {
  color: white;
  font-size: 32rpx;
  margin-left: 36rpx;
  position: relative;
  z-index: 99;
}