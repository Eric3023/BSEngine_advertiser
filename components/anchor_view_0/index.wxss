.item {
  width: 310rpx;
  height: fit-content;
  box-shadow: 0rpx 0rpx 8rpx #e0e0e0;
  font-size: 26rpx;
  margin: 20rpx 18rpx;
  border-radius: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.item .section_up {
  position: relative;
}

.img{
  width: 100%;
  height: 100rpx;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
}

.flag {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.hot {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 12rpx;
  bottom: 16rpx;
}

.section_down {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: flex-end;
  margin: 10rpx 0;
}

.section_down .goods {
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.section_down .text {
  color: #484848;
  white-space: nowrap;
  margin: 4rpx 8rpx;
}

.section_down .price {
  color: #ff595c;
  font-size: 24rpx;
  text-align: center;
  margin-left: 5%;
  border: 1rpx #ff595c solid;
  padding:2rpx 20rpx;
  margin: 2rpx 20rpx;
  border-radius: 24rpx;
}