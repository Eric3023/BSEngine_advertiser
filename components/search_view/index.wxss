.center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.search_background {
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  box-shadow: 0 0 10rpx #ced3d4;
  margin-bottom: 20rpx;
  position: fixed;
  z-index: 9;
}

.search {
  width: 650rpx;
  height: 54rpx;
  box-sizing: border-box;
  border: 1px solid #e6e3e349;
  border-radius: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #f4f4f4;
}

.icon {
  margin: 0 16rpx 0 8rpx;
  width: 42rpx;
  height: 42rpx;
}