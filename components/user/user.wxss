/* components/user/user.wxss */
.user_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.uicon {
  width: 196rpx;
  height: 196rpx;
  border-radius: 50%;
  /* border: 6rpx solid #ffffff; */
  overflow: hidden;
}

.uicon image {
  width: 196rpx;
  height: 196rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 25rpx;
}

.nickName {
  font-size: 32rpx;
  color: #242424;
}

.uid {
  font-size: 28rpx !important;
  color: #242424 !important;
  margin-top: 12rpx !important;
  border: none !important;
  background-color: transparent !important;
  line-height: normal;
  padding: 0 !important;
  border: none !important;
}

.uid::after {
  line-height: normal;
  padding: 0 !important;
  border: none !important;
}

