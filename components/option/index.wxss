.container {
  /* width: 187.5rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  box-sizing: border-box;
  position: relative;
}

.icon {
  width: 102rpx;
  height: 102rpx;
}

.content {
  font-size: 30rpx;
  margin-top: 15rpx;
}

.info {
  background-color: #f22b15;
  color: white;
  font-size: 18rpx;
  line-height: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 16rpx;
  left: 72%;
}

.circle {
  width: 40rpx;
  height: 40rpx;
  margin-top: 6rpx;
  margin-left: -6rpx;
  border-radius: 50%;
}

.round {
  width: 120rpx;
  height: 40rpx;
  border-top-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  border-top-right-radius: 20rpx;
}